<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증번호"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="#000000"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증번호가 메일로 전송되었습니다"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증번호 4자리를 입력 해 주세요"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">


        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5" />

        <EditText
            android:id="@+id/certify_editText_1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/certify_background_shape"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:padding="5dp">
            <requestFocus />
        </EditText>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/certify_editText_2"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/certify_background_shape"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:padding="5dp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/certify_editText_3"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/certify_background_shape"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:padding="5dp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/certify_editText_4"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/certify_background_shape"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5" />
    </LinearLayout>

    <Button
        android:id="@+id/certify_okButton"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:background="#FFFFFF"
        android:layout_marginTop="20dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
</LinearLayout>