<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InFormActivity"
    android:orientation="vertical"
    android:layout_margin="10dp">


    <TextView
        android:id="@+id/textView35"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내 정보"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="15dp"
        android:padding="5dp" />

    <androidx.legacy.widget.Space
        android:id="@+id/space2"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/view_background_shape"
        android:padding="10dp">


        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/user_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp">


            <TextView
                android:id="@+id/inform_nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="oo님"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/inform_schoolText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="xx대학교"
                android:textColor="#000000" />

        </LinearLayout>
    </LinearLayout>

    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:background="@drawable/view_background_shape"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/inform_favoriteText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground">


            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/favorite_after_icon"
                android:clickable="false"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="즐겨찾기"
                android:layout_marginStart="20dp"
                android:textColor="#000000"
                android:clickable="false"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inform_myWritingText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                app:srcCompat="@drawable/post_icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="내가 쓴글 보러가기"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/inform_applyedText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:clickable="false"
                app:srcCompat="@drawable/heart_download_icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="미팅 받은신청 목록"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/inform_applyingText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                app:srcCompat="@drawable/heart_upload_icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="미팅 보낸신청 목록"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/inform_certifyText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                app:srcCompat="@drawable/favorite_after_icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="학교 인증"
                android:textColor="#000000" />

        </LinearLayout>
    </LinearLayout>

    <androidx.legacy.widget.Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/view_background_shape"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/inform_questionText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="문의 하기"
            android:textColor="#000000"
            android:background="?attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/inform_appText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="앱 버전"
            android:textColor="#000000"
            android:background="?attr/selectableItemBackground"/>

    </LinearLayout>


</LinearLayout>