<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hotmeeting_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grey_background_shape"
    android:padding="5dp"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/hotmeeting_ageText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textColor="#000000"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/hotmeeting_schoolText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/hotmeeting_certifyText"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"

        android:text="TextView" />

    <com.google.android.material.chip.Chip
        android:id="@+id/hotmeeting_memberChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>
</LinearLayout>